{
  "manifest_version": 2,

  "name": "Gmail™ Notifier",
  "description": "Multiple account (or label) Gmail notifier (without storing passwords)",
  "version": "0.1.8",
  "icons": { 
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "default_locale": "en",
  
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "https://mail.google.com/",
    "storage",
    "tabs",
    "notifications",
    "background"
  ],

  "web_accessible_resources": [
    "notification.png"
  ],
  
  "browser_action": {
    "default_icon": "blue.png"
  },
  
  "options_page": "options/options.html",
  "homepage_url": "http://add0n.com/gmail-notifier-chrome.html"
}
